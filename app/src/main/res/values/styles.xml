<resources>

    <!-- Base application theme. -->
    <style name="JKMovieTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/white_primary</item>
    </style>

    <style name="JKMovieTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
    </style>

    <style name="TextAppearance.Primary" parent="">
        <item name="android:textColor">@color/black_primary</item>
    </style>

    <style name="TextAppearance.Primary.Inverse">
        <item name="android:textColor">@color/white_primary</item>
    </style>


</resources>
