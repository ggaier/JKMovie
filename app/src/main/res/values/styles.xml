<resources>

    <!-- Base application theme. -->
    <style name="JKMovieTheme" parent="@android:style/Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="JKMovieTheme.Toolbar" parent="@android:style/Widget.Material.Toolbar">
        <item name="android:textColor">@color/white_primary</item>
    </style>

    <style name="TextAppearance.Primary" parent="">
        <item name="android:textColor">@color/black_primary</item>
    </style>

    <style name="TextAppearance.Primary.Inverse">
        <item name="android:textColor">@color/white_primary</item>
    </style>


</resources>
